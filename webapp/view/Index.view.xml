<mvc:View
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:tnt="sap.tnt"
	controllerName="workbench.controller.Index"
	xmlns:core="sap.ui.core"
>
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<f:ShellBar id="_IDGenShellBar"
				homeIcon="../images/bible_2600768.png"
				title="Rhema Notas - Estudos e ReflexÃµes"
				showMenuButton="true"
				showCopilot="false"
				showNotifications="false"
				menuButtonPressed="onMenuButtonPress"
				showProductSwitcher="false"
				notificationsNumber="false"
				
			>
				<f:profile>
					<Avatar id="_IDGenAvatar" initials="{oModel>/login}"/>
				</f:profile>
			</f:ShellBar>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation id="_IDGenSideNavigation"
				selectedKey="{/selectedKey}"
				itemSelect="onItemSelect"
			>
				<tnt:NavigationList id="_IDGenNavigationList1" items="{path: '/navigation'}">
					<tnt:NavigationListItem id="_IDGenNavigationListItem"
						text="{title}"
						icon="{icon}"
						enabled="{enabled}"
						expanded="{expanded}"
						items="{items}"
						key="{key}"
						visible="{oModel>/visible}"
					>
						<tnt:NavigationListItem id="_IDGenNavigationListItem1"
							text="{title}"
							key="{key}"
							enabled="{enabled}"

						/>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList id="_IDGenNavigationList2" items="{path: '/fixedNavigation'}">
						<tnt:NavigationListItem id="_IDGenNavigationListItem2"
							text="{title}"
							icon="{icon}"
							key="{key}"
							visible="{visible}"
						/>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer
				id="pageContainer"
				initialPage="dashboard"
			>
				<pages>
					<ScrollContainer
						id="dashboard"
						horizontal="false"
						vertical="true"
						height="100%"
					>
						<core:Fragment fragmentName="workbench.view.fragments.dashboard" type="XML" />
					</ScrollContainer>
					<ScrollContainer
						id="introducao_teologia"
						horizontal="false"
						vertical="true"
						height="100vh"
					>
						<core:Fragment fragmentName="workbench.view.fragments.Teologia.IntroducaoTeologia" type="XML" />
					</ScrollContainer>
					<ScrollContainer
						id="teologia_biblica"
						horizontal="false"
						vertical="true"
						height="100vh"
					>
						<core:Fragment fragmentName="workbench.view.fragments.Teologia.TeologiaBiblica" type="XML" />
					</ScrollContainer>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>